<h1><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class='row'>
    <div class="col-xs-12 col-sm-6 form-group">
      <%= f.label :first_name, "Vorname" %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="col-xs-12 col-sm-6 form-group">
      <%= f.label :last_name, "Nachname" %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    <%= f.label :email, "Bitte gib die E-Mail-Adresse deiner Hochschule ein.", class: ' form-text text-muted'%>
  </div>

  <div class="form-group">
    <%= f.label :password, "Passwort" %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
