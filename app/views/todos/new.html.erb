<%= form_for @todo, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group row">
    <%= f.label :project, "Projektnummer", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10 col-lg-6"> 
    <%= select(:todo, :project_id, current_user.projects.all.collect {|p| [ p.project_name, p.id ] }) %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :task, "Aufgabenbeschreibung", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10 col-lg-6">
      <%= f.text_field :task, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
        <%= f.label :min_cost, "Mindestkosten", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10 col-lg-6">
      <%= f.text_field :min_cost, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
        <%= f.label :max_cost, "Maximalkosten", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10 col-lg-6">
      <%= f.text_field :max_cost, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
        <%= f.label :level, "Schwierigkeit", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10 col-lg-6">
    <%= f.select :level, (1..10) %>
    </div>
  </div>
  <%= f.submit 'Aufgabe erstellen', class: "btn btn-default btn-primary" %>
<% end %>