<div class="row">
<% obj.each do |t| %>
<div class="card_todo col-sm-12 col-md-6 col-lg-3">
	<div class="card" style="max-width: 18rem;">
		<div class="card-block">
	  <div class="card-header bg-transparent"><%= t.id %> - <small><%= t.project.project_name %></small></div>
	  <div class="card-body">
	    <h5 class="card-title"><%= t.task %></h5>
	    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
	  </div>
	  <div class="card-footer bg-transparent"><%= t.created_by %><%= link_to "Zur Aufgabe", todo_path(t) %></div>
	</div>
	</div>
</div>
<% end %>
</div>