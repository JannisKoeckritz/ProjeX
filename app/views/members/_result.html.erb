<div class="row">
<% if @users %>
	<% if @users.size > 0 and @users.size != User.all %>
		<div id="friend-lookup-results" class="results-block col-lg-12">
			<table class="table">
				<thead>
					<tr>
						<th class="row">Name</th>
						<th>Username</th>
						<th>E-Mail</th>
						<th>Aktion</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td class="row"><%= user.full_name %></td>
							<td><%= user.username %></td>
							<td><%= user.email %></td>
							<% if UserProject.where(project_id: @project.id, user_id: user.id).count > 0 %>
								<% if user && user.id %>
									<td>
										<%= label_tag 'Projektteilnehmer'%>
									</td>
								<% end %>
							<% else %>
									<td><%= link_to 'User hinzufÃ¼gen', add_to_project_path(:user_id => user.id, :project_id => @project.id) , class: 'btn btn-xs btn-success'%></td>
							<% end %>								
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	<% end %>
<% end %>
</div>